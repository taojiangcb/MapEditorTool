<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="800" height="100">
	
	<s:Rect width="100%" height="100%">
		<s:fill>
			<s:SolidColor color="0xFFFFFF"/>
		</s:fill>
		<s:stroke>
			<s:SolidColorStroke color="0xFFFFFF" weight="1"/>
		</s:stroke>
	</s:Rect>
	
	<s:VGroup width="100%" left="5" right="5" top="5" gap="5" bottom="5">
		<s:HGroup width="100%">
			<s:TextInput id="ts" width="120" prompt="开始城市" restrict="0-9"/>
			<s:TextInput id="es" width="120" prompt="结速城市" restrict="0-9"/>
			<s:Button label="寻路径" id="btnSearch"/>
		</s:HGroup>
		<s:TextArea id="txtResult" width="100%" height="100%"/>
	</s:VGroup>
</s:Group>
